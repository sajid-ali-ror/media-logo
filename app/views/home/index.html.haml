$(".card_text_area").text($(".gray_active").html())
}
})
$(".grayscale").on("click", function () {
$(".card_text_area").text()
if (this.checked) {
$(".gray_inactive ").show()
$(".gray_active").hide()
$(".card_text_area").text($(".gray_inactive").html())
} else {
$(".gray_inactive ").hide()
$(".gray_active").show()
$(".card_text_area").text($(".gray_active").html())
}
})
});