debugger
$(".card_text_area").text($(".gray_active").html())
$(".input_field").on(" focusout", function () {
id = this.id
if (this.value.length > 4) {
$(".card_text_area").text()
$("." + id).attr('href', this.value);
$("." + id + "_img").attr('src', "//logo.clearbit.com/" + this.value + "?size=40");
